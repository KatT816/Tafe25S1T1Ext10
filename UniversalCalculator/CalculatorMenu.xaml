<Page
    x:Class="Calculator.CalculatorMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="LightGray">

	<Grid>
		<Viewbox>
		
			<Grid>
			<StackPanel Margin="100" BorderBrush="Gray" BorderThickness="1" >

				<TextBlock Text="Universal calculator" HorizontalAlignment="Center" Margin="0,32,0,16" Foreground="Black" FontSize="30"/>

				<Button Content="Math Calculator" Margin="0,10"  Foreground="Black" Click="OpenMainPage">
				<Button.Style>
						<Style TargetType="Button">
							<Setter Property="Background" Value="SkyBlue"/>
							<Setter Property="FontFamily" Value="Times New Roman" />
							<Setter Property="FontSize" Value="30" />
							<Setter Property="HorizontalAlignment" Value="Center" />
							<Setter Property="Width" Value="300" />
							<Setter Property="Height" Value="100" />
						</Style>
					</Button.Style>
				</Button>
				<Button Content="Mortgage Calculator" Margin="0,10" Foreground="Black" Click="OpenMortgageCalculator">
					<Button.Style>
						<Style TargetType="Button">
							<Setter Property="Background" Value="SkyBlue"/>
							<Setter Property="FontFamily" Value="Times New Roman" />
							<Setter Property="FontSize" Value="30" />
							<Setter Property="HorizontalAlignment" Value="Center" />
							<Setter Property="Width" Value="300" />
							<Setter Property="Height" Value="100" />
						</Style>
					</Button.Style>
				</Button>

				<Button Content="Currency Calculator" Margin="0,10" Foreground="Black" Click="OpenCurrencyCalculator">
					<Button.Style>
						<Style TargetType="Button">
							<Setter Property="Background" Value="SkyBlue"/>
							<Setter Property="FontFamily" Value="Times New Roman" />
							<Setter Property="FontSize" Value="30" />
							<Setter Property="HorizontalAlignment" Value="Center" />
							<Setter Property="Width" Value="300" />
							<Setter Property="Height" Value="100" />
						</Style>
					</Button.Style>
				</Button>

				<Button Content="Units Converter" Margin="0,10" Foreground="Black" Click="OpenUnitsConverter">
				<Button.Style>
						<Style TargetType="Button">
							<Setter Property="Background" Value="SkyBlue"/>
							<Setter Property="FontFamily" Value="Times New Roman" />
							<Setter Property="FontSize" Value="30" />
							<Setter Property="HorizontalAlignment" Value="Center" />
							<Setter Property="Width" Value="300" />
							<Setter Property="Height" Value="100" />
							<Setter Property="IsTabStop" Value="False" />
						</Style>
					</Button.Style>
				</Button>

					<Button Content="Trip Calculator" Margin="0,10" Foreground="Black" Click="Button_Click">
						<Button.Style>
							<Style TargetType="Button">
								<Setter Property="Background" Value="SkyBlue"/>
								<Setter Property="FontFamily" Value="Times New Roman" />
								<Setter Property="FontSize" Value="30" />
								<Setter Property="HorizontalAlignment" Value="Center" />
								<Setter Property="Width" Value="300" />
								<Setter Property="Height" Value="100" />
								<Setter Property="IsTabStop" Value="False" />
							</Style>
						</Button.Style>
					</Button>
					<Button Content="Blank" Margin="0,10"  Foreground="Black" >
						<Button.Style>
							<Style TargetType="Button">
								<Setter Property="Background" Value="SkyBlue"/>
								<Setter Property="FontFamily" Value="Times New Roman" />
								<Setter Property="FontSize" Value="30" />
								<Setter Property="HorizontalAlignment" Value="Center" />
								<Setter Property="Width" Value="300" />
								<Setter Property="Height" Value="100" />
							</Style>
						</Button.Style>
					</Button>

					<Button Content="Close" Margin="0,10"  Foreground="Black" Click="Exit_Click" >
				<Button.Style>
						<Style TargetType="Button">
							<Setter Property="Background" Value="SkyBlue"/>
							<Setter Property="FontFamily" Value="Times New Roman" />
							<Setter Property="FontSize" Value="30" />
							<Setter Property="HorizontalAlignment" Value="Center" />
							<Setter Property="Width" Value="300" />
							<Setter Property="Height" Value="100" />
						</Style>
					</Button.Style>
				</Button>

			</StackPanel>
			
		</Grid>

	</Viewbox>
	
	<Image Source="Assets/abacus.png" Width="100" Height="100" Margin="10,10,10,10" HorizontalAlignment="Right" VerticalAlignment="Top"/>
		</Grid>
</Page>
