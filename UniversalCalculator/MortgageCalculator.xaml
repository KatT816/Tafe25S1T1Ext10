<Page
    x:Class="Calculator.MortgageCalculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="LightGray">

    <Grid>
		<StackPanel>
			<TextBlock Text="Mortgage Calculator" FontSize="50" FontFamily="Broadway" FontWeight="Bold" TextAlignment="Center" Margin="0,20,0,20" Padding="10"/>

			<StackPanel Orientation="Vertical" Padding="10" Margin="0, 10,0,0" HorizontalAlignment="Center">

				<StackPanel Orientation="Horizontal" Margin="10">
					<TextBlock Text="Principal Borrow $:" Width="160" VerticalAlignment="Center" TextAlignment="Right" Margin="10"/>
					<TextBox x:Name="principalTextBox" Width="200" TextAlignment="Right" CharacterReceived="principalTextBox_CharacterReceived"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="10">
					<TextBlock Text="Years:" Width="160" VerticalAlignment="Center" TextAlignment="Right" Margin="10"/>
					<TextBox x:Name="yearTextBox" Width="200" TextAlignment="Right" CharacterReceived="yearTextBox_CharacterReceived"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="10">
					<TextBlock Text="and Months:" Width="160" VerticalAlignment="Center" TextAlignment="Right" Margin="10"/>
					<TextBox x:Name="monthsTextBox" Width="200" TextAlignment="Right" CharacterReceived="monthsTextBox_CharacterReceived"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="10">
					<TextBlock Text="Yearly Interest Rate:" Width="160" VerticalAlignment="Center" TextAlignment="Right" Margin="10"/>
					<TextBox x:Name="yearlyInterestTextBox" Width="200" TextAlignment="Right" CharacterReceived="yearlyInterestTextBox_CharacterReceived"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="10">
					<TextBlock Text="Monthly Interest Rate %:" Width="160" VerticalAlignment="Center" TextAlignment="Right" Margin="10"/>
					<TextBox x:Name="monthlyInterestTextBox" Width="200" TextAlignment="Right" IsReadOnly="True"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="10">
					<TextBlock Text="Monthly Repayment $:" Width="160" VerticalAlignment="Center" TextAlignment="Right" Margin="10"/>
					<TextBox x:Name="repaymentTextBox" Width="200" TextAlignment="Right" IsReadOnly="True"/>
				</StackPanel>
			</StackPanel>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 50, 0,0">
				<Button x:Name="calculateButton" Content="Calculate Mortgage" FontWeight="Bold"  Width="200" Margin="10" Foreground="Black" Background="LightBlue" Click="calculateButton_Click"/>
				<Button x:Name="exitButton" Content="Exit" Foreground="Black" Background="LightBlue" Margin="10" Click="exitButton_Click"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Page>
